{
  "name": "cms-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CMS 移动端配置项目 Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "dev:cms": "pnpm --filter @cms/cms dev",
    "dev:crs": "pnpm --filter @cms/crs dev",
    "build": "turbo run build",
    "build:cms": "pnpm --filter @cms/cms build",
    "build:crs": "pnpm --filter @cms/crs build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{js,ts,vue,json}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@cms/eslint-config": "workspace:*",
    "@cms/prettier-config": "workspace:*",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "rimraf": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
