{
  "name": "@cms/ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/cms-ui.umd.js",
  "module": "./dist/cms-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/cms-ui.es.js",
      "require": "./dist/cms-ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.less"
  ],
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "dev": "vite build --watch",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint src --ext .vue,.ts --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@cms/types": "workspace:*",
    "@cms/utils": "workspace:*",
    "vue": "catalog:"
  },
  "devDependencies": {
    "@cms/eslint-config": "workspace:*",
    "@cms/prettier-config": "workspace:*",
    "@tailwindcss/postcss": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "autoprefixer": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "postcss": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "catalog:"
  },
  "peerDependencies": {
    "vue": "^3.3.4"
  }
}
